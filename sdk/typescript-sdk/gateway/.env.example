# Gateway Configuration

# Server
PORT=8080
HOST=0.0.0.0

# CORS
CORS_ORIGINS=*

# Authentication
AUTH_SECRET=change-me-in-production

# Features
ENABLE_REST_API=true
ENABLE_METRICS=true

# Logging
LOG_LEVEL=info

# Limits
MAX_SPACES=100
MAX_CLIENTS_PER_SPACE=100
MAX_MESSAGE_SIZE=1048576
MAX_HISTORY_SIZE=1000

# WebSocket
HEARTBEAT_INTERVAL=30000