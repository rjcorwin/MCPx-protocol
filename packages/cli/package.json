{
  "name": "@mcpx-protocol/cli",
  "version": "0.1.1",
  "description": "MCPx CLI chat client for testing and interaction",
  "main": "dist/index.js",
  "bin": {
    "mcpx-chat": "dist/cli-blessed.js",
    "mcpx-chat-simple": "dist/cli.js",
    "mcpx-chat-terminal": "dist/cli-terminal.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/cli-blessed.js",
    "cli": "tsx src/cli-blessed.ts",
    "cli:simple": "tsx src/cli.ts",
    "test": "vitest",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcpx",
    "cli",
    "chat",
    "client",
    "testing"
  ],
  "author": "MCPx Working Group",
  "license": "MIT",
  "dependencies": {
    "@mcpx-protocol/client": "^0.1.0",
    "@types/blessed": "^0.1.25",
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rjcorwin/mcpx-protocol.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/rjcorwin/mcpx-protocol#readme",
  "bugs": {
    "url": "https://github.com/rjcorwin/mcpx-protocol/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
