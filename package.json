{
  "name": "mcpx",
  "version": "0.1.0",
  "private": true,
  "description": "MCPx Protocol Reference Implementation",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mcpx.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:client && npm run build:agent && npm run build:bridge && npm run build:cli && npm run build:gateway",
    "build:all-parallel": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev:gateway": "npm run dev -w @mcpx-protocol/gateway",
    "dev:web": "npm run dev -w @mcpx-protocol/web-client",
    "dev:bridge": "npm run dev -w @mcpx-protocol/bridge",
    "build:client": "npm run build -w @mcpx-protocol/client",
    "build:agent": "npm run build -w @mcpx-protocol/agent",
    "build:bridge": "npm run build -w @mcpx-protocol/bridge",
    "build:cli": "npm run build -w @mcpx-protocol/cli",
    "build:gateway": "npm run build -w @mcpx-protocol/gateway",
    "test:client": "npm run test -w @mcpx-protocol/client",
    "test:agent": "npm run test -w @mcpx-protocol/agent",
    "clean": "npm run clean --workspaces --if-present",
    "example:echo": "cd examples/echo-bot && npm start",
    "example:calculator": "cd examples/calculator-agent && npm start",
    "example:coordinator": "cd examples/coordinator-agent && npm start",
    "example:documents": "cd examples/documents-agent && npm start",
    "example:openai": "cd examples/openai-agent && npm start",
    "example:all": "npm run example:echo & npm run example:calculator & npm run example:coordinator & npm run example:documents & wait",
    "cli": "npm run cli -w @mcpx-protocol/cli",
    "cli:simple": "npm run cli:simple -w @mcpx-protocol/cli",
    "cli:terminal": "node packages/cli/dist/cli-terminal.js ws://localhost:3000 test-room test-user",
    "cli:test": "npm run cli -w @mcpx-protocol/cli ws://localhost:3000 test-room test-user"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}